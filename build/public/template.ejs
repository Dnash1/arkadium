<% var x = [0, 1, 2]%>
<% function shff(arr) {
    let i = arr.length;
    while (i > 0) {
        let ind = Math.floor(Math.random() * i);
        i--;
        let z = arr[i];
        arr[i] = arr[ind];
        arr[ind] = z;
    }
    return arr;
} %>
<% shff(x) %>

